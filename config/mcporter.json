{
  "mcpServers": {
    "notebooklm": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "notebooklm-mcp@latest"]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "10000"
      }
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--user-data-dir", "/home/lincoln/.openclaw/playwright_data",
        "--headless"
      ]
    },
    "time": {
      "type": "stdio",
      "command": "/home/lincoln/.mcp-env/bin/python",
      "args": ["-m", "mcp_server_time", "--local-timezone", "America/Sao_Paulo"],
      "env": {}
    }
  }
}
